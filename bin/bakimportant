#!/usr/bin/env bash
# Back up important files

bak_dir="$HOME/Sync"
tar_file="$HOME/Sync.tar"

if [ ! -d $bak_dir ]; then
  echo "Could not back up $bak_dir (does not exist)"
  exit 1
else
  tar \
    --exclude="Pictures/Archive" \
    --exclude="Videos" \
    --exclude="Music" \
    -cvf "$tar_file" "$bak_dir"
  echo "Backed up to $tar_file"
fi
