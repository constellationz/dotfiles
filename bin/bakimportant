#!/usr/bin/env bash
# Back up important files

BAKDIR="$HOME/Sync"
TARFILE="$HOME/Sync.tar"

if [ ! -d $BAKDIR ]; then
  echo "Could not back up $BAKDIR (does not exist)"
  exit 1
else
  tar \
    --exclude="Pictures/Archive" \
    --exclude="Videos" \
    --exclude="Music" \
    --exclude=".osync_workdir" \
    -cvf "$TARFILE" "$BAKDIR"
  echo "Backed up to $TARFILE"
fi
