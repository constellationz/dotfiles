#!/usr/bin/env bash
# Organize files on the desktop into their respective sync folders

DESKTOP="$HOME/Desktop"
SYNC="$DESKTOP/sync"

mv "$DESKTOP"/*.dmg "$SYNC"/dmg
mv "$DESKTOP"/*.jpeg "$SYNC"/pictures
mv "$DESKTOP"/*.mov "$SYNC"/pictures
mv "$DESKTOP"/*.mp4 "$SYNC"/pictures
mv "$DESKTOP"/*.png "$SYNC"/pictures
mv "$DESKTOP"/*.pdf "$SYNC"/pdf
