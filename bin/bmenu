#!/usr/bin/env bash
# Open configured bemenu

FG="#DEDDDA"
BG="#1D1D1D"
BG1="#303030"
BG2="#242424"

# Don't run duplicates
if pidof bemenu; then
  exit 1
fi

bemenu --fn Fira\ Mono 10 \
  --width-factor 0.3 \
  --no-overlap \
  --monitor 1 \
  --line-height 20 \
  --list 10 \
  --ignorecase \
  --margin 30 \
  --tb $BG --fb $BG1 --cb $BG1 --nb $BG --hb $BG2 --fbb $BG --ab $BG1 --scb $BG \
  --tf $FG --ff $FG --cf $FG --nf $FG --hf $FG --fbf $FG --af $FG --scf $FG \
  $@
