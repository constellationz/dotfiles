#!/usr/bin/bash

FG="#ebdbb2"
BG="#282828"
BG1="#3c3836"
BG2="#7c6f64"

# Don't run duplicates
if ps aux | grep bemenu | grep -v grep; then
  exit 1
fi

bemenu --fn Hack 10 \
  --width-factor 0.3 \
  --no-overlap \
  --monitor 1 \
  --line-height 20 \
  --list 10 \
  --ignorecase \
  --margin 30 \
  --tb $BG --fb $BG1 --cb $BG1 --nb $BG --hb $BG2 --fbb $BG --ab $BG1 --scb $BG \
  --tf $FG --ff $FG --cf $FG --nf $FG --hf $FG --fbf $FG --af $FG --scf $FG \
  $@
